{{> header}}

<div class="content">
    {{> navigation}}
    <section id="viewMyPosts">
        <div class="post post-content">
            <h1>Your Posts</h1>
        </div>
        <div class="posts">
            {{#each posts}}
            <article class="post">
                <div class="col rank">
                    <span>{{rank}}</span>
                </div>
                <div class="col thumbnail">
                    <a href="{{url}}">
                        <img src="{{imageUrl}}">
                    </a>
                </div>
                <div class="post-content">
                    <div class="title">
                        <a href="{{url}}">
                            {{title}}
                        </a>
                    </div>
                    <div class="details">
                        <div class="info">
                            submitted {{date}} ago by {{author}}
                        </div>
                        <div class="controls">
                            <ul>
                                <li class="action"><a class="commentsLink" href="#/details{{_id}}">comments</a></li>
                                {{#if isAuthor}}
                                <li class="action"><a class="editLink" href="#/edit/post/{{_id}}">edit</a></li>
                                <li class="action"><a class="deleteLink" href="#/delete/post/{{_id}}">delete</a></li>
                                {{/if}}
                            </ul>
                        </div>

                    </div>
                </div>
            </article>
            {{else}}
            <P>No posts in database</P>
            {{/each}}
            
            <!-- TODO: more posts will come here -->
        </div>
    </section>
    {{> footer}}
</div>