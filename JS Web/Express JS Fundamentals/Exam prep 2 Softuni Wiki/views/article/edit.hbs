<section>
    <h2>Edit article
        {{#if isAdmin}}
        <div class="controls">
            {{#unless article.lockedStatus}}
            <a href="/article/lock/{{article._id}}">Lock article</a>
            {{else}}
            <a href="/article/unlock/{{article._id}}">Unlock article</a>
            {{/unless}}
        </div>
        {{/if}}
    </h2>
    <div class="spacer">
        <form method="POST">
            <label>Article title</label>
            <h3>{{article.title}}</h3>
            <label>Content</label>
            <textarea name="content">{{article.content}}</textarea>
            <input type="submit" value="Submit">
        </form>
    </div>
</section>